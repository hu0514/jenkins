pipeline{
    agent any
    environment{
        def BUILD_USER=sh(returnStdout:true,script: "curl ${JENKINS_URL}/job/${JOB_NAME}/${BUILD_ID}/api/xml|awk '{match(\$0,\"<userId>\")}{print substr(\$0,RSTART+RLENGTH)}' | awk -F \"<\" '{print \$1}'")
        def timestamp=sh(returnStdout:true,script: "curl ${JENKINS_URL}/job/${JOB_NAME}/${BUILD_ID}/api/xml|awk '{match(\$0,\"<timestamp>\")}{print substr(\$0,RSTART+RLENGTH)}' | awk -F \"<\" '{print \$1}'|awk '{print substr(\$1,1,10)}'")    
        def BUILD_TIME=sh(returnStdout:true,script:"echo `date '+%Y-%m-%d %T %Z' -d @$timestamp `")
        def DINGTALK_TOKEN='2e7a689bd8794a2149d297d7f72a3f68f6023100acd4626cac0f35553730862c'  
        def GIT_URL='https://github.com/hu0514/eureka.git'
        def BRANCH='master'
        def GIT_CRED_ID='03be43e2-f021-4089-904c-41aa427ea279'
        def ASB_CRED_ID='93305ed6-fd67-4692-ad14-ff62d5365599'
        def AtUser='18817810841'
    }
    post{
        always{
            sh """
            curl 'https://oapi.dingtalk.com/robot/send?access_token=${DINGTALK_TOKEN}' \
                -H 'Content-Type: application/json' \
                -d '
                {"msgtype": "markdown",
                    "markdown": {"title":"${JOB_NAME}-构建${currentBuild.currentResult}",
                        "text":"## ${JOB_NAME}-构建${currentBuild.currentResult}\n\n 执行任务: 测试+构建+部署\n\n 构建时间: ${BUILD_TIME}\n\n 项目名称: ${JOB_NAME}\n\n 构建编号: ${BUILD_DISPLAY_NAME}\n\n 版本作者: ${BUILD_USER}\n\n 版本状态: ${currentBuild.currentResult}\n\n ### @${AtUser}\n\n [点击查看](${JENKINS_URL}blue/organizations/jenkins/${JOB_NAME}/detail/${JOB_NAME}/${BUILD_ID})"
                    },
                    "at":{
                        "atMobiles":[
                            ${AtUser}
                        ],
                        "isAtAll":false
                    }
                }
                '
            """
        }
    }
    stages{
        stage('get code'){
            steps{
                dir(path:"./provider-comn"){
                    git (
                        credentialsId: GIT_CRED_ID,
                        branch: 'master',
                        url: 'https://github.com/hu0514/provider-comn.git',
                        changelog: true
                    )
                }
                dir(path:"./eureka"){
                    git (
                        credentialsId: GIT_CRED_ID,
                        branch: BRANCH,
                        url: GIT_URL,
                        changelog: true
                    )
                }

            }
        }
        stage('test'){
            agent{
                docker{
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps{
                dir(path:"../eureka/provider-comn"){
                    sh '''
                    mvn -v
                    mvn test
                    '''                    
                }
                dir(path:"../eureka/eureka"){
                    sh '''
                    mvn -v
                    mvn test
                    '''                    
                }
            }
        }
        stage('build'){
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps{
                dir(path:"../eureka/provider-comn"){
                    sh 'mvn install'
                }
                dir(path:"../eureka/eureka"){
                     sh '''
                        mvn -B -DskipTests clean package
                        ls target/*.jar
                    '''                   
                }

            }
        }
        stage('deploy'){
            agent {
                docker {
                    image 'qq79428316/club-ansible:2.4.2.0'
                    args '-v /data/ansible:/etc/ansible -v /data/jenkins/data:/data -e ANSIBLE_HOST_KEY_CHECKING=False'
                }
            }
            steps{
                sh """
                curl 'https://oapi.dingtalk.com/robot/send?access_token=${DINGTALK_TOKEN}' \
                    -H 'Content-Type: application/json' \
                    -d '
                    {"msgtype": "markdown",
                        "markdown": {"title":"请登录jnekins确认是否发布${JOB_NAME}",
                            "text":"## ${JOB_NAME}-构建${currentBuild.currentResult}\n\n 执行任务: 测试+构建+部署\n\n 构建时间: ${BUILD_TIME}\n\n 项目名称: ${JOB_NAME}\n\n 构建编号: ${BUILD_DISPLAY_NAME}\n\n 版本作者: ${BUILD_USER}\n\n 版本状态: ${currentBuild.currentResult}\n\n ### @${AtUser}\n\n ### 请登录jnekins确认是否发布\n\n[点击查看](${JENKINS_URL}blue/organizations/jenkins/${JOB_NAME}/detail/${JOB_NAME}/${BUILD_ID})"
                        },
                        "at":{
                            "atMobiles":[
                                ${AtUser}
                            ],
                            "isAtAll":false
                        }
                    }
                    '
                """  
                input(
                    id: '立即发布',
                    message: '是否立即发布'+JOB_NAME+'?',
                    ok: '立即发布.',
                )
                ansiColor('xterm') {
                    ansiblePlaybook(
                        playbook: '/etc/ansible/test.yml',
                        inventory: '/etc/ansible/hosts',
                        credentialsId: ASB_CRED_ID,
                        colorized: true
                    )
                }
            }

        }
            
    }
}